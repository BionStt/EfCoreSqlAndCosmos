@using System.Globalization
@model ServiceLayer.BooksSql.Dtos.AddRemovePromotionDto

<h2>Remove price promotion</h2>
<div class="form-horizontal">
    <form method="post">
        @Html.ValidationSummary(true, null, new { @class = "text-danger h4" })
        <!-- Input and Submit elements -->
        <input name="BookId" type="hidden" value="@Model.BookId" />
        @*We need these in case where there is an error and we need to reshow the data again*@
        <input name="Title" type="hidden" value="@Model.Title" />
        <input name="OrgPrice" type="hidden" value="@Model.OrgPrice" />
        <input name="ActualPrice" type="hidden" value="@Model.ActualPrice" />
        <input name="PromotionalText" type="hidden" value="@Model.PromotionalText" />

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @Model.Title
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Org Price</label>
            </div>
            <div class="col-sm-10">
                @(Model.OrgPrice < 0 ? "Not for sale" : Model.OrgPrice.ToString("c", new CultureInfo("en-US")))
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Promotional price</label>
            </div>
            <div class="col-sm-10">
                @(Model.ActualPrice < 0 ? "Not for sale" : Model.ActualPrice.ToString("c", new CultureInfo("en-US")))
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Promotional Text</label>
            </div>
            <div class="col-sm-10">
                @Model.PromotionalText
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Remove</button>
            </div>
        </div>

    </form>
</div>


